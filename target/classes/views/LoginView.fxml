<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import controllers.*?>
<?import javafx.collections.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.RowConstraints?>
<?import com.guigarage.sdk.util.*?>

<AnchorPane fx:id="pane" minHeight="700.0" minWidth="1500.0"
	xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controllers.LoginController">
	<ImageView fx:id="backgroundImage" AnchorPane.bottomAnchor="0.0"
		AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
		AnchorPane.topAnchor="0.0" />
	<GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
		AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
		<columnConstraints>
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
				prefWidth="100.0" />
		</columnConstraints>
		<rowConstraints>
			<RowConstraints minHeight="10.0" prefHeight="30.0"
				vgrow="SOMETIMES" />
		</rowConstraints>
		<children>
			<VBox maxHeight="450.0" maxWidth="350.0" minHeight="450.0"
				minWidth="350.0" prefHeight="450.0" prefWidth="350.0"
				GridPane.halignment="CENTER" GridPane.valignment="CENTER"
				styleClass="login-pane">
				<children>
					<GridPane>
						<columnConstraints>
							<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
								prefWidth="100.0" />
						</columnConstraints>
						<rowConstraints>
							<RowConstraints minHeight="10.0" prefHeight="30.0"
								vgrow="SOMETIMES" />
						</rowConstraints>
						<children>
							<Label text="Applicant" styleClass="font-25-text"
								GridPane.halignment="CENTER" fx:id="typeLabel" />
						</children>
						<VBox.margin>
							<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
						</VBox.margin>
					</GridPane>
					<GridPane prefHeight="200.0">
						<columnConstraints>
							<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
								prefWidth="100.0" />
						</columnConstraints>
						<rowConstraints>
							<RowConstraints minHeight="10.0" prefHeight="30.0"
								vgrow="SOMETIMES" />
						</rowConstraints>
						<children>
							<RoundImageView defaultSize="128"
								GridPane.halignment="CENTER" fx:id="img" />
						</children>
						<VBox.margin>
							<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
						</VBox.margin>
					</GridPane>
					<GridPane>
						<columnConstraints>
							<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
								prefWidth="100.0" />
						</columnConstraints>
						<rowConstraints>
							<RowConstraints minHeight="10.0" prefHeight="30.0"
								vgrow="SOMETIMES" />
						</rowConstraints>
						<children>
							<Button fx:id="switchButton" GridPane.halignment="CENTER"
								GridPane.valignment="CENTER">

							</Button>
						</children>
						<VBox.margin>
							<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
						</VBox.margin>
					</GridPane>
					<TextField fx:id="userNameField" promptText="User Name">
						<font>
							<Font size="18.0" />
						</font>
						<VBox.margin>
							<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
						</VBox.margin>
					</TextField>
					<PasswordField fx:id="userPasswordField" promptText="Password">
						<font>
							<Font size="18.0" />
						</font>
						<VBox.margin>
							<Insets bottom="10.0" left="10.0" right="10.0" />
						</VBox.margin>
					</PasswordField>
					<GridPane>
						<columnConstraints>
							<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
							<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
								prefWidth="100.0" />
						</columnConstraints>
						<rowConstraints>
							<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
						</rowConstraints>
						<children>
							<Button fx:id="signUpButton" mnemonicParsing="false" text="SIGN UP"
								GridPane.halignment="CENTER" GridPane.columnIndex="2">
								<font>
									<Font size="18.0" />
								</font>
							</Button>
							<Button fx:id="loginButton" mnemonicParsing="false" text="LOGIN"
								GridPane.columnIndex="1" GridPane.halignment="CENTER">
								<font>
									<Font size="18.0" />
								</font>
							</Button>
							<Button fx:id="languageOptionsButton" mnemonicParsing="false" text="%Language_Options" GridPane.columnIndex="0"
								GridPane.halignment="CENTER">
								<font>
									<Font size="18.0" />
								</font>
							</Button>
						</children>
						<VBox.margin>
							<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
						</VBox.margin>
					</GridPane>
				</children>
			</VBox>
		</children>
	</GridPane>

</AnchorPane>
